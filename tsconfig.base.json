{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "downlevelIteration": true,
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ES2021",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@dasch-swiss/jdnconvertiblecalendar": ["libs/jdnconvertiblecalendar/src/index.ts"],
      "@dasch-swiss/jdnconvertible-calendar-date-adapter/*": [
        "libs/jdnconvertiblecalendardateadapter/*"
      ],
    },
    "useDefineForClassFields": false,
    "rootDir": "."
  },
  "exclude": ["node_modules", "tmp"]
}
